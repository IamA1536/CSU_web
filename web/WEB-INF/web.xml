<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>com.a.JPetStore.web.servlets.MainServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>com.a.JPetStore.web.servlets.VCategoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VProductServlet</servlet-name>
        <servlet-class>com.a.JPetStore.web.servlets.VProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchProductServlet</servlet-name>
        <servlet-class>com.a.JPetStore.web.servlets.SearchProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VItemServlet</servlet-name>
        <servlet-class>com.a.JPetStore.web.servlets.VItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <servlet-class>com.a.JPetStore.web.servlets.AddItemToCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VCartServlet</servlet-name>
        <servlet-class>com.a.JPetStore.web.servlets.VCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveItemFromCartServlet</servlet-name>
        <servlet-class>com.a.JPetStore.web.servlets.RemoveItemFromCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCartQuantitiesServlet</servlet-name>
        <servlet-class>com.a.JPetStore.web.servlets.UpdateCartQuantitiesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignonFormServlet</servlet-name>
        <servlet-class>com.a.JPetStore.web.servlets.SignonFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewOrderFormServlet</servlet-name>
        <servlet-class>com.a.JPetStore.web.servlets.NewOrderFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditAccountFormServlet</servlet-name>
        <servlet-class>com.a.JPetStore.web.servlets.EditAccountFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VOrderServlet</servlet-name>
        <servlet-class>com.a.JPetStore.web.servlets.VOrderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/vcategory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VProductServlet</servlet-name>
        <url-pattern>/vproduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchProductServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VItemServlet</servlet-name>
        <url-pattern>/vitem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <url-pattern>/AddItemToCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VCartServlet</servlet-name>
        <url-pattern>/vcart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveItemFromCartServlet</servlet-name>
        <url-pattern>/removeitemfromcart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCartQuantitiesServlet</servlet-name>
        <url-pattern>/updatecartquantities</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignonFormServlet</servlet-name>
        <url-pattern>/signonform</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewOrderFormServlet</servlet-name>
        <url-pattern>/neworderform</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditAccountFormServlet</servlet-name>
        <url-pattern>/editaccountform</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VOrderServlet</servlet-name>
        <url-pattern>/vorder</url-pattern>
    </servlet-mapping>
</web-app>